<UserControl x:Class="Trainingsmanager.TrainingSet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Trainingsmanager"
             xmlns:my="clr-namespace:Trainingsmanager"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <Label x:Name="dayLabel" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <ComboBox x:Name="listBox" HorizontalAlignment="Left" Height="25"  VerticalAlignment="Top" Width="100">
            <ComboBoxItem Content="Brust"/>
            <ComboBoxItem Content="Arme"/>
            <ComboBoxItem Content="Rücken"/>
            <ComboBoxItem Content="Bauch"/>
            <ComboBoxItem Content="Beine"/>
        </ComboBox>
        <StackPanel Margin="10,5">
            <my:Exercise Margin="5"/>
            <my:Exercise Margin="5"/>
            <my:Exercise Margin="5"/>
            <my:Exercise Margin="5"/>
            <my:Exercise Margin="5"/>
        </StackPanel>
       
    </StackPanel>
</UserControl>
